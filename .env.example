# PolyAgent Configuration
# Copy this file to .env and fill in your API keys

# AI Provider API Keys (at least one is required)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here  
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
GLM_API_KEY=your-glm-key-here

# Optional: Proxy URLs for restricted access
# OPENAI_BASE_URL=https://your-proxy.com/v1/
# ANTHROPIC_BASE_URL=https://your-proxy.com/v1/

# Behavior Settings
POLYAGENT_VERBOSE=false
POLYAGENT_TOOLS=true
POLYAGENT_LOG_LEVEL=INFO

# Document Search (comma-separated paths)
# POLYAGENT_DOCS=/path/to/docs1,/path/to/docs2