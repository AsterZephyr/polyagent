# PolyAgent Environment Configuration
# Copy to .env and fill in your API keys

# AI Model API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here  
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
GLM_API_KEY=your-glm-key-here

# Optional: Proxy URLs for API access
# OPENAI_PROXY_URL=https://your-proxy.com/v1
# ANTHROPIC_PROXY_URL=https://your-proxy.com/v1

# Document paths (comma-separated)
POLYAGENT_DOCS=./docs/medical,./docs/tech,./docs/general

# Agent behavior
POLYAGENT_VERBOSE=false
POLYAGENT_TOOLS=true
POLYAGENT_LOG_LEVEL=INFO

# Gateway configuration (if using Go gateway)
GATEWAY_PORT=8080
GATEWAY_HOST=0.0.0.0
GATEWAY_WORKERS=4

# Database (optional)
# DATABASE_URL=postgresql://user:pass@localhost/polyagent

# Cache (optional) 
# REDIS_URL=redis://localhost:6379/0

# Security
# JWT_SECRET=your-jwt-secret-here
# API_RATE_LIMIT=100  # requests per minute